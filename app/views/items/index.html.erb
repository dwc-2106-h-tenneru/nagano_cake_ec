  <div class="container">
    <div class="row pt-4 mb-5">
      <div class="col-3">
        <%= render 'items/genre', genres: @genres %>
      </div>
      <div class="col-8">
        <h3>商品一覧</h3>
          <div class="row pt-4 mb-5">
            <% @items.each do |item| %>
            <div class="card col-md-3 p-1 m-1" style="width: 18rem;">
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :image, class: "card-img-top" %>
              <% end %>
              <div class="card-body">
                <p class="card-title"><%= item.name %></p>
                <p class="card-text">
                  ¥<%= converting_to_jpy(item.add_tax_price) %></br>
                  <% if item.is_active == true %>
                    <font color="green">販売中</font>
                  <% elsif item.is_active == false %>
                    <font color="silver">売り切れ</font>
                  <%  end %>
                </p>

              </div>
            </div>
            <% end %>
          </div>
        <!--テーブルを４商品横ならびの二行で、ページャ機能つける-->
        <%= paginate @items %>
      </div>
    </div>
  </div>