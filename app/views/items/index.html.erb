  <div class="wf-hannari container">
<div class="container">
    <div class="row pt-4 mb-5">
      <div class="col-3">
        <%= render 'items/genre', genres: @genres %>
      </div>
      <div class="col-8">
        <h3 class="ml-5"><span style="background-color:#EEEEEE">商品一覧（全<%= @items.total_count %>件）</span></h3>
          <div class="row pt-4 mb-5">
            <% @items.each do |item| %>
            <div class="card col-md-3 p-1 m-1" style="width: 18rem;">
              <div>
                <%= link_to item_path(item.id) do %>
                  <%= attachment_image_tag item, :image, class: "card-img-top rounded" %>
                <% end %>
              </div>
              <div class="card-body">
                <p class="card-title"><%= item.name %></p>
                <p class="card-text">
                  ¥<%= converting_to_jpy(item.add_tax_price) %></br>
                </p>
              </div>
            </div>
            <% end %>
          </div>

        <%= paginate @items %>
      </div>
    </div>
  </div>