  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'items/genre', genres: @genres %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h3>商品一覧</h3>
            <% @items.each do |item| %>
             <div class="row">
              <div class="col-lg-3 col-md-6 mb-4">
                <%= link_to item_path(item.id) do %>
                  <%= item.image_id %>
                  <%= item.name %>
                  <%= converting_to_jpy(item.add_tax_price) %>
                 <% end %>
              <% end %>
              </div>
             </div>
        <!--テーブルを４商品横ならびの二行で、ページャ機能つける-->
      </div>
    </div>
  </div>