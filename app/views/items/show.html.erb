<div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'items/genre', genres: @genres %>
      </div>
      <div class="col-md-8 offset-md-1">
  <%= attachment_image_tag @item, :image %>
  <p><%= @item.name %></p>
  <p><%= @item.introduction %></p>
  <p>￥<%= @item.add_tax_price.to_s(:delimited) %> (税込) </p>
  <%= form_with model: @items do |f| %>
  <%= f.select :amount, [[1], [2], [3], [4],[5]], include_blank: "個数選択" %>
  <% end %>
  <%= link_to "カートに入れる", cart_items_path,class:"btn btn-success" %>
  <%#= link_to "カートに入れる", %>
</div>
      </div>
    </div>
  </div>