<h2>新規投稿画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="namae">
    名前
    <div class="field">
      <%= f.label "(姓)" %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "令和" %>
    </div>

    <div class="field">
      <%= f.label "(名)" %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "道子" %>
    </div>
  </div>

  <div class="namae">
    フリガナ
    <div class="field">
      <%= f.label "(セイ)" %><br />
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "レイワ" %>
    </div>

    <div class="field">
      <%= f.label "(メイ)" %><br />
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "ミチコ" %>
    </div>
  </div>
  <div class="field">
    <%= f.label "メール" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :post_code, autofocus: true, autocomplete: "0000000" %>
  </div>

  <div class="field">
    <%= f.label "住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label "電話番号(ハイフンなし)" %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "00000000000" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
