<h2>ショッピングカート</h2>
<!--↓ここまだうまいことできてない-->
 <%= link_to "カートを空にする", cart_item_path(@cart_item), method: :delete_all, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %>
 <table class="table table-hover table-inverse">
  <thead>
   <tr>
       <th>商品名</th>
       <th>単価</th>
       <th>数量</th>
       <th>小計</th>
       <th></th>
   </tr>
  </thead>
  <tbody>
<% @sum = 0 %>
<% @cart_item.each do |cart_item| %>
   <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.price %></td>
    <td>
      <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
      <%#= f.hidden_field :item_id, value: @item.id %>
       <%= f.select :amount, [[1], [2], [3], [4],[5]] %>
       <%= f.submit '変更' %>
       <% end %>
     <%#= link_to "変更", cart_item.amount(@cart_item), method: :patch, class:"btn btn-success" %>
     </td>
    <td>
     <%= cart_item.item.price * cart_item.amount %>
     <!--ここはsum+=sub_total　と%= sub_total -->
    </td>
    <td><%= link_to "Destroy", cart_item_path(cart_item), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
    </tr>
    　<% @sum += cart_item.item.price %>
   </tbody>
  <% end %>
 </table>
 <table class="table table-hover table-inverse">
   <tbody>
    <tr>
      <th>合計金額</th>
     <th>
      <%= @sum %>
      </th>
    </tr>
 </table>
 <%= link_to "買い物を続ける", items_path,class:"btn btn-success" %>
 <div></div>
 <%= form_with model: @order ,url: new_oder_path, method: :post, local: true do |f| %>
 <%#= f.hidden_field :cart_item_id, value: @cart_item.id %>
  <%= f.submit "情報入力を続ける",class:"btn btn-success" %>
 <% end %>