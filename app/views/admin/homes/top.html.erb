<h3>注文履歴一覧</h3>
 <table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <% end %>
      </td>
      <td><%= order.name %></td>
      <td><%= order.個数 %> </td>
      <td>
        <% if item.is_active == true %>
          <font color="green">販売中</font>
        <% elsif item.is_active == false %>
          <font color="silver">販売停止中</font>
        <%  end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @orders %>