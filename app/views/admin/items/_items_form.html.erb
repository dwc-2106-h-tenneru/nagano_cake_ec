<div class="form-group">
  <%= f.label :商品画像 %>
  <%= f.attachment_field :image, class: "form-control-file" %>
</div>

<div class="form-group">
 <%= f.label :商品名 %>
 <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
</div>

<div class="form-group">
 <%= f.label :商品説明 %>
 <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :ジャンル %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "--選択してください--", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :税抜価格 %>
  <%= f.text_field :price, placeholder: "1000", class: "form-control" %>円
</div>

<div class="form-group">
  <%= f.label :販売ステータス %>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active, "販売中", value: true %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active, "販売停止中", value: false %>
</div>