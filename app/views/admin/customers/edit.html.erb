<div class="container mt-3 mb-5">
  <h3><span style="background-color:#EEEEEE"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</span></h3>
  <h2 class="head-line title_h2 text-center"></h2>
  <%= form_with(model: @customer, url:admin_customer_path, local: true ,method: :patch) do |f| %>

  <div class="row pt-4">
    <div class="col-3">会員ＩＤ</div>
    <div class="col-4"><%= @customer.id %></div>
  </div>
      <div class="row pt-2">
      <div class="col-3">氏名</div>
      <div class="form-group col-4">
        <%= f.label "(姓)",for: "inputEmail4", class: "form-label" %><br />
        <%= f.text_field :last_name, autofocus: true, placeholder: "令和",class: "form-control" %>
      </div>
      <div class="form-group col-4">
        <%= f.label "(名)" %><br />
        <%= f.text_field :first_name, autofocus: true, placeholder: "道子",class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">フリガナ</div>
      <div class="form-group col-4">
        <%= f.label "(セイ)" %><br />
        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ",class: "form-control" %>
      </div>

      <div class="form-group col-4">
        <%= f.label "(メイ)" %><br />
        <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ",class: "form-control" %>
      </div>
  </div>

  <div class="row">
    <div class="col-3">郵便番号</div>
    <div class="form-group col-4"><%= f.text_field :post_code, autofocus: true, placeholder: "0000000",class: "form-control" %></div>
  </div>

  <div class="row">
    <div class="col-3">住所</div>
    <div class="form-group col-8"><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0",class: "form-control" %></div>
  </div>

  <div class="row">
    <div class="col-3">電話番号</div>
    <div class="form-group col-4"><%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000",class: "form-control" %></div>
  </div>

  <div class="row">
    <div class="col-3">メールアドレス</div>
    <div class="form-group col-4"><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com",class: "form-control" %></div>
  </div>

  <div class="row">
    <div class="col-3">会員ステータス</div>
    <div class="form-group col-4">
    <%= f.radio_button :is_deleted, false %>
      <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
    <%= f.radio_button :is_deleted, true %>
      <%= f.label :is_deleted, "退会済", {value: :true, style: "display: inline-block;"} %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 offset-md-3"><%= f.submit "変更を保存",class: "btn btn-success" %></div>
  </div>
  <% end %>
</div>