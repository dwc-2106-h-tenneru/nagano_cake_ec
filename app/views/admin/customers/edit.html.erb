<body>
<% provide(:title, "会員情報編集") %>
  <h2 class="head-line title_h2 text-center"></h2>
  <%= form_with(model: @Customer, url:admin_customer_path, local: true ,method: :patch) do |f| %>


        <%= f.label :"名前(漢字)", class: "col-sm-4 control-label" %>
        <p>
        <%= f.text_field :last_name, class: "col-sm-4 form-control-static" %>
        <%= f.text_field :first_name,  class: "col-sm-4 form-control-static" %>
        </p>
        <%= f.label :"フリガナ(カタカナ)" ,class: "col-sm-4 control-label" %>
        <p>
        <%= f.text_field :last_name_kan,  class: "col-sm-4 form-control-static" %>
        <%= f.text_field :first_name_kana,  class: "col-sm-4 form-control-static" %>
        </p>

        <%= f.label :"郵便番号", autofocus: true, class: "col-sm-4 control-label" %>
        <%= f.text_field :post_code, class: "col-sm-4 form-control-static postal_code" %>


        <%= f.label :"住所", class: "col-sm-4 control-label" %>
        <%= f.text_field :residence, autofocus: true, class: "col-sm-8 form-control-static address"  %>

        <%= f.label :"電話番号", class: "col-sm-4 control-label" %>
        <%= f.text_field :phone_number, class: "col-sm-4 form-control-static" %>

        <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
        <%= f.text_field :email, class: "col-sm-4 form-control-static" %>

       <%= f.label :"会員ステータス", class: "col-sm-4 control-label" %>
        　<%= f.radio_button :is_deleted, true %>
        　<%= f.label :is_deleted, "退会済", {value: :false, style: "display: inline-block;"} %>
        　<%= f.radio_button :is_deleted, false %>
        　<%= f.label :is_deleted, "有効", {value: :ture, style: "display: inline-block;"} %>

      <p>
        <%= f.submit "変更" %>
      <% end %>
      <%= link_to "戻る", admin_customer_path %>
      </p>
</body>