<h2>注文情報入力</h2>

<%= form_with model: @order ,url: orders_confirm_path, method: :post, local: true do |f| %>
 <h4>支払い方法</h4>

  <%= f.radio_button :payment_method, "クレジットカード" %>
  <%= f.label :payment_method, "クレジットカード" %>
  <%= f.radio_button :payment_method, "銀行振込" %>
  <%= f.label :payment_method, "銀行振込" %>

  <h4>お届け先</h4>
   <%= f.label :address, "お届け先" %>
   <br>

   <%= f.radio_button :address_option, 0, checked:true %>
   <%= f.label :address, "ご自身の住所" %>
    <p>〒<%= current_customer.post_code %></p>
    <p><%= current_customer.address %></p>
    <p><%= current_customer.last_name + current_customer.first_name %></p>
   <br>
   <%= f.radio_button :address_option, 1 %>
   <%= f.label :address, "登録済住所から選択" %>
   <%= f.collection_select :id, current_customer.addresses, :id, :order_address %>

   <br>
   <%= f.radio_button :address_option, 2 %>
   <%= f.label :address, "新しいお届け先" %>
   <br>

   <%= f.label :post_code, "郵便番号" %>
   <%= f.text_field :post_code %>
   <br>

   <%= f.label :address, "住所" %>
   <%= f.text_field :address %>
   <br>
   <%= f.label :name, "名前" %>
   <%= f.text_field :name %>
   <br>

 <%#= f.radio_button :address_option, ""  %>
 <%#= f.radio_button :address_option, "" %>
 <%#= f.radio_button :address_option, "" %>
<%= f.submit "確認画面に進む",class:"btn btn-success" %>
<% end %>