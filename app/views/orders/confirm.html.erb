<h2>注文情報確認</h2>

<%#= form_with model: @order ,url: order_path, method: :patch, local: true do |f| %>
 <table class="table table-hover table-inverse">
  <thead>
   <tr>
       <th>商品名</th>
       <th>単価</th>
       <th>数量</th>
       <th>小計</th>
   </tr>
  </thead>
  <tbody>
<% @sum = 0 %>
<% @cart_items.each do |cart_item| %>
   <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.price %></td>
    <td>
      <%= cart_item.amount %>
     <%#= link_to "変更", cart_item.amount(@cart_item), method: :patch, class:"btn btn-success" %>
     </td>
    <td>
     <%= cart_item.item.price * cart_item.amount %>
     <!--ここはsum+=sub_total　と%= sub_total -->
    </td>
    </tr>
    　<% @sum += cart_item.item.price * cart_item.amount %>
   </tbody>
 <% end %>
 </table>
 <table class="table table-hover table-inverse">
  <thead>
   <tr>
       <th><%= @order.address %></th>
       <th><%= @order.post_code %></th>
       <th><%= @order.name %></th>
 </table>
<%#= f.submit "確認画面に進む",class:"btn btn-success" %>
 <%# end %>
