<h2>新規投稿画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <form class="row">
    <div class="namae form-row align-items-center mb-3">
      名前
      <div class="form-inline col-sm-3">
        <%= f.label "(姓)",for: "inputEmail4", class: "form-label" %><br />
        <%= f.text_field :last_name, autofocus: true, placeholder: "令和",class: "form-control" %>
      </div>

      <div class="form-inline col-sm-6">
        <%= f.label "(名)" %><br />
        <%= f.text_field :first_name, autofocus: true, placeholder: "道子",class: "form-control" %>
      </div>
    </div>
  </form>
    <div class="namae form-row align-items-center mb-3">
      フリガナ
      <div class="form-inline col-sm-3">
        <%= f.label "(セイ)" %><br />
        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
      </div>

      <div class="form-inline col-sm-6">
        <%= f.label "(メイ)" %><br />
        <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
      </div>
    </div>
    <div class="field">
      <%= f.label "メール" %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com" %>
    </div>

    <div class="field">
      <%= f.label "郵便番号(ハイフンなし)" %><br />
      <%= f.text_field :post_code, autofocus: true, placeholder: "0000000" %>
    </div>

    <div class="field">
      <%= f.label "住所" %><br />
      <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0" %>
    </div>

    <div class="field">
      <%= f.label "電話番号(ハイフンなし)" %><br />
      <%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000" %>
    </div>

    <div class="field">
      <%= f.label "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label "パスワード(確認用)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>

<% end %>
<div class="signup_comment">既に登録済の方</div>
<div class="kochira">
<%= render "customers/shared/links" %>
からログインしてください。
</div>