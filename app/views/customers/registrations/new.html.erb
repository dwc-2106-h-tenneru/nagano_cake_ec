<div class="container">
  <h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-3">名前</div>
      <div class="form-group col-4">
        <%= f.label "(姓)",for: "inputEmail4", class: "form-label" %><br />
        <%= f.text_field :last_name, autofocus: true, placeholder: "令和",class: "form-control" %>
      </div>

      <div class="form-group col-4">
        <%= f.label "(名)" %><br />
        <%= f.text_field :first_name, autofocus: true, placeholder: "道子",class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">フリガナ</div>
      <div class="form-group col-4">
        <%= f.label "(セイ)" %><br />
        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ",class: "form-control" %>
      </div>

      <div class="form-group col-4">
        <%= f.label "(メイ)" %><br />
        <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ",class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">メール</div>
      <div class="form-group col-4"><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com",class: "form-control" %></div>
    </div>

    <div class="row">
      <div class="col-3"><%= f.label "郵便番号(ハイフンなし)" %></div>
      <div class="form-group col-4"><%= f.text_field :post_code, autofocus: true, placeholder: "0000000",class: "form-control" %></div>
    </div>

    <div class="row">
      <div class="col-3"><%= f.label "住所" %></div>
      <div class="form-group col-8"><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0",class: "form-control" %></div>
    </div>

    <div class="row">
      <div class="col-3"><%= f.label "電話番号(ハイフンなし)" %></div>
      <div class="form-group col-4"><%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000",class: "form-control" %></div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="form-group col-4"><%= f.password_field :password, autocomplete: "new-password",class: "form-control" %></div>
    </div>

    <div class="row">
      <div class="col-3"><%= f.label "パスワード(確認用)" %></div>
      <div class="form-group col-4"><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %></div>
    </div>

      <div class="actions col-12">
       <%= f.submit "新規登録",class: "btn btn-success" %>
      </div>

<% end %>
<div class="signup_comment">既に登録済の方</div>
<div class="kochira">
<%= render "customers/shared/links" %>
からログインしてください。
</div>
</div>