<div class="container mt-3">
  <h4>配送先編集</h4>
  <%= form_with model:@address, url:"/addresses/#{@address.id}", local:true do |f| %>
    <div class="row pt-4">
      <div class="col-3">郵便番号(ハイフンなし)</div>
      <div class="form-group col-4"><%= f.text_field :post_code, autofocus: true, placeholder: "0000000",class: "form-control" %></div>
    </div>

    <div class="row">
      <div class="col-3">住所</div>
      <div class="form-group col-7"><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0",class: "form-control" %></div>
    </div>

    <div class="row">
      <div class="col-3">宛名</div>
      <div class="form-group col-4"><%= f.text_field :name, autofocus: true, placeholder: "令和",class: "form-control" %></div>
    </div>

    <div class="actions offset-md-9">
      <%= f.submit '変更内容を保存',class: "btn btn-success" %>
    </div>
  <% end %>
</div>