<div class="container mt-3">
<h2>管理者ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-3">メールアドレス</div>
    <div class="form-group col-4"><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com",class: "form-control" %></div>
  </div>

  <div class="row">
    <div class="col-3">パスワード</div>
    <div class="form-group col-4"><%= f.password_field :password, autocomplete: "new-password",class: "form-control" %></div>
  </div>

  <%# if devise_mapping.rememberable? %>
    <!--div class="field">
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    </div>
  <#% end %-->

  <div class="actions offset-md-6">
    <%= f.submit "ログイン",class: "btn btn-success" %>
  </div>
<% end %>

<%#= render "admins/shared/links" %>
</div>